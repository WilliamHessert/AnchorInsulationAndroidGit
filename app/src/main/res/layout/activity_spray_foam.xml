                    android:textSize="18sp"
                    android:layout_margin="20dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/sprayfoamBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/box_filled"
                android:textColor="#fff"
                android:text="Submit"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/sprayfoamProgress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/sAdditionalView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/sAddTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter any additional crewmembers who were on the job:"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:id="@+id/sAddEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="8"
            android:hint="Additional Crewmembers"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:gravity="top|start"
            android:background="@drawable/box"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <Button
            android:id="@+id/sAddSubmitBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sAddEditText"
            android:layout_margin="30dp"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textColor="#fff"/>
    </RelativeLayout>
</RelativeLayout>
